# ============================================
# Database Configuration
# ============================================
# SQLite (default for development)
DATABASE_URL=sqlite:///./career_agent.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/career_agent_db

# ============================================
# Job Board API Keys
# ============================================
# Adzuna API (Free tier: 5000 calls/month)
# Sign up at: https://developer.adzuna.com/
ADZUNA_API_ID=481f5602
ADZUNA_API_KEY=d75f7323372543c3dbb1f954c8669ca4

# ============================================
# OpenAI Configuration (optional - for LLM features)
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0

# Alternative: Anthropic Claude
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# Email Configuration for Applications
# ============================================
# SMTP Settings (for sending job applications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here

# For Gmail App Password, enable 2FA then generate at:
# https://myaccount.google.com/apppasswords

# ============================================
# Email Notifications
# ============================================
# Enable email notifications for new high-match jobs
NOTIFICATIONS_ENABLED=false

# Notification SMTP (can be same as above)
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password_here
RECIPIENT_EMAIL=your_email@gmail.com

# Note: For Gmail, use an "App Password" not your regular password

# ============================================
# Safety Settings
# ============================================
DRY_RUN=true  # Set to false to actually submit applications
SKIP_SCAM_JOBS=true
SKIP_DUPLICATES=true
MIN_MATCH_SCORE=70

