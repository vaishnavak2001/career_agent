# ============================================
# Database Configuration
# ============================================
# SQLite (default for development)
DATABASE_URL=sqlite:///./career_agent.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/career_agent_db

# ============================================
# OpenAI Configuration (optional - for LLM features)
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0

# ============================================
# Agent Behavior
# ============================================
AUTO_APPLY_ENABLED=false
DEFAULT_PERSONALITY=professional

# ============================================
# Continuous Monitoring
# ============================================
# Enable background job monitoring
MONITORING_ENABLED=true
DEFAULT_SCRAPE_INTERVAL=60  # minutes
DEFAULT_REGION=Remote
DEFAULT_ROLE=Software Engineer
DEFAULT_PLATFORMS=LinkedIn,Indeed

# ============================================
# Email Notifications
# ============================================
# Enable email notifications
NOTIFICATIONS_ENABLED=false

# SMTP Configuration (e.g., Gmail)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password_here
RECIPIENT_EMAIL=your_email@gmail.com

# Note: For Gmail, use an "App Password" not your regular password
# Generate at: https://myaccount.google.com/apppasswords

# ============================================
# Safety Settings
# ============================================
DRY_RUN=true  # Set to false to actually submit applications
SKIP_SCAM_JOBS=true
SKIP_DUPLICATES=true
MIN_MATCH_SCORE=70

