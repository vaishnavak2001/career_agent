# Database Configuration
# For Render, this will be provided automatically, but for local prod testing:
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
BACKEND_CORS_ORIGINS=https://your-frontend-app.vercel.app,http://localhost:5173

# OpenAI API (Required for Agent, Resume Analysis, Interview Prep)
OPENAI_API_KEY=sk-your-openai-api-key

# Adzuna API (For Job Scraping)
ADZUNA_API_ID=your-adzuna-app-id
ADZUNA_API_KEY=your-adzuna-api-key

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-backend-app.onrender.com/api/v1/auth/callback/google

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=https://your-backend-app.onrender.com/api/v1/auth/callback/linkedin

# SendGrid (Optional - for future email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
